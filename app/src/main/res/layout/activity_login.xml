<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="@color/purple"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:text="Please enter your valid phone number.\nWe will send you a 4-digit code to verify"
        android:lineSpacingExtra="4dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/purple" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_border_gradient"
        android:hint="Phone Number"
        android:layout_marginBottom="20dp"
        android:paddingStart="50dp"
        android:paddingTop="12dp"
        android:paddingEnd="50dp"
        android:paddingBottom="12dp"
        android:inputType="phone"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_border_gradientbg"
        android:backgroundTint="@null"
        android:paddingStart="25dp"
        android:paddingTop="12dp"
        android:paddingEnd="25dp"
        android:paddingBottom="12dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/or"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login using"
            android:paddingBottom="20dp"
            android:textSize="24dp"
            android:textColor="@color/purple_2"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.facebook.login.widget.LoginButton
                android:id="@+id/fb_login_button"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/fb"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb"/>
            <ImageView
                android:id="@+id/google"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gmail"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>